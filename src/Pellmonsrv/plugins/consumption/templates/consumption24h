<h4>Last 24h</h1>
<div id="consumption24h" style="height:400px">
</div>

<script type="text/javascript">
    var baroptions = {
         series: {
             color: '#6989b7',
             bars: {
                 show: true,
                 lineWidth: 0,
             },
         },
        legend: { 
            show: false,
        },
         xaxis: {
             mode: 'time',
             lineWidth: 0,
             tickColor: '#f9f9f9',
         },
        grid:   {
            hoverable: true,
            backgroundColor:'#f9f9f9',
            borderWidth: 1,
            borderColor: '#e7e7e7'
            },
     };

    var drawConsumption = function(url, graph, width, label, totalunit, averageunit) {
        $.get(
            url,
            function(jsondata) {
                var data = JSON.parse(jsondata);
                var options = baroptions;
                options.series.bars.barWidth = width * 1000;
                plot = $.plot($(graph), data.bardata, options);
                $('<p>' + label + data.total.toFixed(1).toString() + totalunit + '</p>').insertAfter($(graph));
                $('<p> average ' + data.average.toFixed(1).toString() + averageunit + '</p>').insertAfter($(graph)).css('float', 'right');
            });
    }


    document.addEventListener("DOMContentLoaded", function(event) { 
        drawConsumption('${webroot}/consumptionview/flotconsumption24h', '#consumption24h', 3300, 'last 24h: ', ' kg', ' kg/h ');
    });

</script>
